ALTER TABLE MANITOU_TEST.DEMO_ORDERS
 DROP PRIMARY KEY CASCADE;

DROP TABLE MANITOU_TEST.DEMO_ORDERS CASCADE CONSTRAINTS;

CREATE TABLE MANITOU_TEST.DEMO_ORDERS
(
  ORDER_ID         NUMBER                       NOT NULL,
  CUSTOMER_ID      NUMBER                       NOT NULL,
  ORDER_TOTAL      NUMBER(8,2),
  ORDER_TIMESTAMP  DATE,
  USER_ID          NUMBER
)
TABLESPACE USERS
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
MONITORING;



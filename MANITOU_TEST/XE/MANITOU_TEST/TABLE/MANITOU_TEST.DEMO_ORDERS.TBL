ALTER TABLE MANITOU_TEST.DEMO_ORDERS ADD (
  CONSTRAINT DEMO_ORDER_TOTAL_MIN
  CHECK (order_total >= 0)
  ENABLE VALIDATE,
  CONSTRAINT DEMO_ORDER_PK
  PRIMARY KEY
  (ORDER_ID)
  USING INDEX MANITOU_TEST.DEMO_ORDER_PK
  ENABLE VALIDATE);

ALTER TABLE MANITOU_TEST.DEMO_ORDERS ADD (
  CONSTRAINT DEMO_ORDERS_CUSTOMER_ID_FK 
  FOREIGN KEY (CUSTOMER_ID) 
  REFERENCES MANITOU_TEST.DEMO_CUSTOMERS (CUSTOMER_ID)
